<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">

	<servlet>
		<servlet-name>Demo</servlet-name>
		<servlet-class>com.example.servlet.filterdispatchertype.DemoServlet</servlet-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Demo</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Demo</servlet-name>
		<url-pattern>/demo</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Forward</servlet-name>
		<servlet-class>com.example.servlet.filterdispatchertype.DemoServlet</servlet-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Forward</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Forward</servlet-name>
		<url-pattern>/forward</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Error</servlet-name>
		<servlet-class>com.example.servlet.filterdispatchertype.DemoServlet</servlet-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Error</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Error</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>Foo</filter-name>
		<filter-class>com.example.servlet.filterdispatchertype.DemoFilter</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Foo</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Foo</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>Bar</filter-name>
		<filter-class>com.example.servlet.filterdispatchertype.DemoFilter</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Bar</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Bar</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<filter>
		<filter-name>Baz</filter-name>
		<filter-class>com.example.servlet.filterdispatchertype.DemoFilter</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Baz</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Baz</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>

	<filter>
		<filter-name>Qux</filter-name>
		<filter-class>com.example.servlet.filterdispatchertype.DemoFilter</filter-class>
		<init-param>
			<param-name>name</param-name>
			<param-value>Qux</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Qux</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>

	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/demo</location>
	</error-page>

</web-app>
